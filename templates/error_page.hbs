<div class="govuk-width-container">
		{{#isnt error 'not_found'}}
    <a href="javascript:history.back(-1)" class='govuk-back-link'>
        Back
    </a>
  	{{/isnt}}
    
  	{{#isnt error 'not_found'}}
      <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds govuk-!-margin-top-4">
              <div>
                  {{search submit=true class='app-search app-search--black-border' placeholder='Search ESFA support'}}
              </div>
          </div>
      </div>
    {{/isnt}}

    <div class="govuk-grid-row govuk-!-margin-top-2 govuk-!-margin-bottom-9">
        <div class="govuk-grid-column-full">
            {{#is error 'unauthorized'}}
                <h1 class="govuk-heading-xl">{{link 'sign_in'}}</h2>
            {{/is}}

            {{#is error 'forbidden'}}
                <h1 class="govuk-heading-xl">{{t 'not_authorized'}}</h2>
            {{/is}}

            {{#is error 'not_found'}}
                <h1 class="govuk-heading-xl govuk-!-margin-top-9 govuk-!-margin-bottom-6">This page cannot be found</h1>
              
               <p class="govuk-body">This could be because the:</p>
              <ul class="govuk-list govuk-list--bullet">
                <li>link you were sent has the wrong web address</li>
                <li>web address was not copied fully</li>
                <li>page was deleted or no longer exists</li>
              </ul>
                      
          			<div class="govuk-grid-row">
                  <div class="govuk-grid-column-two-thirds govuk-!-margin-top-4 govuk-!-margin-bottom-6">
                      <div>
                          {{search submit=true class='app-search app-search--black-border' placeholder='Search ESFA support'}}
                      </div>
                  </div>
      					</div>
          
          <p class="govuk-body">or <a href="/hc/en-gb" class="govuk-link">go back to home</a></p>
          
          <p class="govuk-body-s govuk-!-margin-top-9 govuk-!-margin-bottom-9">If you think we have made an error, please email <a href="mailto:customer.experience@education.gov.uk" class="govuk-link govuk-!-font-size-16">customer.experience@education.gov.uk</a>.</p>
            {{/is}}

        

        </div>
    </div>
</div>